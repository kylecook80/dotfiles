#!/bin/bash

DIR="${BASH_SOURCE%/*}"
if [[ ! -d "$DIR" ]]; then DIR="$PWD"; fi
. "$DIR/scripts/installer_util.sh"

SAFE=0
while getopts "u" o; do
    case "${o}" in
    u)
        SAFE=1
        ;;
    esac
done

if [[ SAFE ]]; then
    install_apps
else
    install_apps "update"
fi

install_scripts
install_dotfiles
