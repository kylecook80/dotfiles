#!/usr/bin/env bash

DEFAULT_FILES="aliases gdbinit gitconfig gitignore i3 polybar rofi screenrc vimrc xmodmaprc Xresources Xresources.d zshenv zshrc zsh"
OTHER_FILES="viminfo zcompdump zhistory zsh_history"
DIR="$(pwd)"

for item in $DEFAULT_FILES; do
    if [[ -L "$HOME/.${item##*/}" ]]; then
        rm -rf $HOME/.${item##*/}
    fi
done

for item in $OTHER_FILES; do
    if [[ -e "$HOME/.$item" ]]; then
        rm -rf "$HOME/.$item"
    fi
done

for item in $DIR/scripts/*; do
    if [[ -L "$HOME/bin/${item##*/}" ]]; then
        rm $HOME/bin/${item##*/}
    fi

    if ! find "$HOME/bin" -mindepth 1 -print -quit | grep -q .; then
        rmdir $HOME/bin
    fi
done
