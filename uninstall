#!/bin/bash

DEFAULT_FILES="aliases gdbinit gitconfig gitignore screenrc tmux.conf tmux vimrc vim zshenv zshrc zsh"
OTHER_FILES="viminfo zcompdump zhistory zsh_history"

DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

for item in $DEFAULT_FILES; do
    rm -f $HOME/.$item
done

for item in $OTHER_FILES; do
    if [[ -e "$HOME/.$item" ]]; then
        rm -rf "$HOME/.$item"
    fi
done

for item in $DIR/scripts/*.sh; do
    if [[ -L "$HOME/bin/${item##*/}" ]]; then
        rm $HOME/bin/${item##*/}
    fi
done
